{
  "cli": {
    "version": ">= 5.0.0"
  },
  "build": {
    "preview": {
      "android": {
        "buildType": "apk",
        "resourceClass": "medium"
      },
      "ios": {
        "simulator": true,
        "resourceClass": "medium"
      }
    },
    "preview2": {
      "android": {
        "gradleCommand": ":app:assembleRelease",
        "resourceClass": "medium"
      }
    },
    "preview3": {
      "developmentClient": true,
      "resourceClass": "medium"
    },
    "production": {
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease",
        "withoutCredentials": false,
        "resourceClass": "large",
        "buildCache": true
      },
      "ios": {
        "resourceClass": "large",
        "buildCache": true
      }
    }
  },
  "submit": {
    "production": {}
  }
}
